@model Quanlybug.Models.Project_1

<form asp-action="CreateProject" asp-controller="Home" method="post" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Tiêu đề </label>
                            <div class="col-sm-10">
                                <input type="text" asp-for=NameProject  class="form-control" id="inputEmail3">

                           
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Chi tiết</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" asp-for=ContextProject placeholder="chi tiết lỗi bug" id="floatingTextarea" style="height: 150px;"></textarea>
                            </div>
                        </div>
                         <div class="row mb-3">
                          <label  id="uploadhinh" name="uploadhinh" class="col-sm-2 col-form-label" accept="image/*">Hình Ảnh</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control" name="uploadhinh" id="uploadhinh">
                            </div>
                        </div>
                     <div class="row mb-3">
                  <label id="date" name="date" class="col-sm-2 col-form-label" accept="image/*">Ngày đăng</label>
                  <div class="col-sm-10">
                    <input type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" class="form-control" asp-for="Date" id="Date">
                 </div>
                     </div>
    <div class="row mb-3">
        <label id="date" name="date" class="col-sm-2 col-form-label" accept="image/*">Người thực hiện</label>
        <div class="col-sm-10">
            <select asp-items="@ViewBag.select" class="form-select" aria-label="Default select example"
                    asp-for="Performer"></select>
        </div>
    </div>
    <div class="row mb-3">
        <label id="date" name="date" class="col-sm-2 col-form-label" accept="image/*">Trạng thái</label>
        <div class="col-sm-10">
            <select asp-for="Status" class="form-select" aria-label="Default select example">
                <option value="Chưa hoàn thành" selected>
                    chưa hoàn thành 
                </option>
                <option value="Hoàn thành" selected>
                    Hoàn thành
                </option>
            </select>
        </div>
    </div>
 <button type="submit" class="btn btn-primary">Đăng dự án</button>
 </form>